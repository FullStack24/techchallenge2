{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "tests/**/*",
    "node_modules/ts-jest/globals.d.ts"
  ],
  "exclude": ["node_modules"]
}
